{
  "name": "bangla-font-previewer",
  "version": "1.0.0",
  "description": "Preview Bangla fonts from your system",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "cc.rafat.banglafontpreview",
    "productName": "Bangla Font Previewer",
    "icon": "build/icon.ico",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "build/icon.ico",
      "build/logo.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fontkit": "^2.0.4"
  }
}
